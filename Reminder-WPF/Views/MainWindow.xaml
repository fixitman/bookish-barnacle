<Window x:Class="Reminder_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Reminder_WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
        
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                 <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        <tb:TaskbarIcon IconSource="/resources/list2.ico" ToolTipText="Hello World!"/>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
                <MenuItem Header="File" />
            </Menu>
            
            

            <ListView x:Name="ReminderList"
                      Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" ItemsSource="{Binding Reminders}" Margin="15" 
                      BorderThickness="1" BorderBrush="Black"
                      SelectionChanged="ListView_SelectionChanged"
                      SelectionMode="Single"
                      MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Text" Width="400" DisplayMemberBinding="{Binding ReminderText}"/>
                        <GridViewColumn Header="Time" Width="auto" DisplayMemberBinding="{Binding ReminderTime, StringFormat={}{0:h:mm tt}}"/>                        
                    </GridView.Columns>
                </GridView>
            </ListView.View>
                
            </ListView>

            <Button Grid.Column="1" Grid.Row="1" Content="Add" Margin="20"
                    Command="{Binding AddClickedCommand}"/>
            <Button Grid.Column="1" Grid.Row="2" Content="Edit" Margin="20" 
                    Command="{Binding EditClickedCommand}"/>
            <Button Grid.Column="1" Grid.Row="3" Content="Delete" Margin="20"
                    Command="{Binding DeleteClickedCommand}"/>
        </Grid>
    
</Window>
