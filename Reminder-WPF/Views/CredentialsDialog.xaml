<Window x:Class="Reminder_WPF.Views.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder_WPF.Views"
        mc:Ignorable="d"
        Title="API Credentials" Height="220" Width="400">
    <StackPanel Orientation="Vertical" Margin="30">        
        <Label Content="Username"/>
        <TextBox x:Name="Username" Text="{Binding UserName}" />
        <Label Content="Password"/>
        <PasswordBox x:Name="Password"   />
        <Button x:Name="Button" IsDefault="True" Content="Ok" Width="100" Padding="5" Margin="0 20" Click="Button_Click"/>
    </StackPanel>
</Window>
