<UserControl x:Class="Reminder_WPF.Views.DoWControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reminder_WPF.Views"
             mc:Ignorable="d"              
             >
    <WrapPanel Orientation="Horizontal" Margin="10" >
        <CheckBox x:Name="cbSun" IsChecked="{Binding Sunday}" Content=" Sunday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbMon" IsChecked="{Binding Monday}" Content=" Monday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbTue" IsChecked="{Binding Tuesday}" Content=" Tuesday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbWed" IsChecked="{Binding Wednesday}" Content=" Wednesday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbThu" IsChecked="{Binding Thursday}" Content=" Thursday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbFri" IsChecked="{Binding Friday}" Content=" Friday"  Margin="20,10,0,0"/>
        <CheckBox x:Name="cbSat" IsChecked="{Binding Saturday}" Content=" Saturday"  Margin="20,10,0,0"/>
    </WrapPanel>


</UserControl>
